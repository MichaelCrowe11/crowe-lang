{
  "name": "crowelang",
  "displayName": "CroweLang - Quantitative Trading DSL",
  "description": "Language support for CroweLang quantitative trading strategies",
  "version": "0.1.0",
  "publisher": "croweai",
  "icon": "icons/crowelang-icon.png",
  "galleryBanner": {
    "color": "#1a365d",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/croweai/crowelang.git"
  },
  "bugs": {
    "url": "https://github.com/croweai/crowelang/issues"
  },
  "homepage": "https://crowelang.com",
  "license": "MIT",
  "keywords": [
    "trading",
    "quantitative",
    "finance",
    "backtesting",
    "algorithmic trading",
    "market making",
    "dsl",
    "strategy",
    "risk management"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:crowelang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "crowelang",
        "aliases": [
          "CroweLang",
          "crowelang"
        ],
        "extensions": [
          ".crowe"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/crowelang-light.svg",
          "dark": "./icons/crowelang-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "crowelang",
        "scopeName": "source.crowelang",
        "path": "./syntaxes/crowelang.tmGrammar.json"
      }
    ],
    "themes": [
      {
        "label": "CroweLang Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/crowelang-dark.json"
      }
    ],
    "snippets": [
      {
        "language": "crowelang",
        "path": "./snippets/crowelang.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Crowe Language",
      "properties": {
        "crowe.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic messages for Crowe files"
        },
        "crowe.enableAutoCompletion": {
          "type": "boolean", 
          "default": true,
          "description": "Enable auto-completion for Crowe language constructs"
        },
        "crowe.compilerPath": {
          "type": "string",
          "default": "crowe",
          "description": "Path to the Crowe compiler executable"
        },
        "crowe.autoCompileOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically compile Crowe files when saved"
        }
      }
    },
    "commands": [
      {
        "command": "crowe.compileFile",
        "title": "Compile Current File",
        "category": "Crowe"
      },
      {
        "command": "crowe.compileWatch",
        "title": "Compile and Watch Current File", 
        "category": "Crowe"
      },
      {
        "command": "crowe.showOutput",
        "title": "Show Compiled Output",
        "category": "Crowe"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .crowe",
          "command": "crowe.compileFile",
          "group": "crowe"
        },
        {
          "when": "resourceExtname == .crowe", 
          "command": "crowe.compileWatch",
          "group": "crowe"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}